{
  "name": "naur",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/naurffxiv",
    "tests/e2e"
  ],
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.29.2"
  },
  "packageManager": "pnpm@10.29.2",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@j178/prek": "^0.3.4",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.1",
    "prettier": "^3.7.4",
    "turbo": "^2.8.12",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "prepare": "prek install",
    "build:naur": "turbo run build --filter=naurffxiv",
    "dev:naur": "pnpm --filter naurffxiv dev",
    "lint:naur": "pnpm --filter naurffxiv lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo test",
    "test:e2e": "pnpm --filter e2e-tests test",
    "start:naur": "pnpm --filter naurffxiv start"
  },
  "overrides": {
    "glob": "^11.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.14",
      "@types/react-dom": "19.2.3"
    }
  }
}
